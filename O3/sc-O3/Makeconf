
OTHER_DIRS = ../../common ../../lists
LIB_DIRS   = ../../getoptions ../../cexceptions

LIBFLAGS = -lm -ldl

OPTFLAGS = -O3 \
    -funroll-loops \
    -fomit-frame-pointer \
    -foptimize-register-move 

EXT = .snl
TEST_OPTIONS = -I inputs -I modules -G
SIZE_OPTIONS = -c -d dump

.PHONY: libraries

all: libraries

test tests alltests: libraries

outputs: libraries

.PHONY: cleanlibraries

cleanAll: cleanlibraries

cleanlibraries:
	${MAKE} -C libraries cleanAll

libraries:
	${MAKE} -C $@
