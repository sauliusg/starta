#
# Snail compiler tests
#
#
# Test line-wise file reading.
#

from std use *;

program lines( string args[] )
{
for var i = 1 to last(args) do
    . args[i];

    var file inp = fopen( args[i], "r" );
    
    var int n = 1;
    var line : string;
    
    while( !feof( inp )) {
        <inp> >> line;
        do break if line == null;
        . n, "\t", ">>>", line, "<<<";
    	n++;
    }
    
    fclose( inp );
enddo;
}
