## 	sed -f ../../${INTERPRETER_DIR}/arrays.sed ${word 2, $^} \
## 	| sed -f $< > $@
## 
## ${GEN_DIR}/%_arrays.c: ${IFUNCTION_DIR}/%.sed ${IFUNCTION_DIR}/arrays.cin
## 	sed -f ../../${INTERPRETER_DIR}/arrays.sed ${word 2, $^} \
## 	| sed -f $< > $@

#-----------------------------------------------------------------------------

cleanlocal:
	rm -f ${GEN_DIR}/*

LOCAL_CLEAN_TARGETS += cleanlocal
