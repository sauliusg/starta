# --*- Makefile -*--

IFUNCTION_DIR = ifunctions
GEN_DIR = locally-generated

#-----------------------------------------------------------------------------

${GEN_DIR}/opcodes.tab.c: opcodes.h
	awk '/^ *int /{print $$2}' $< \
	| sed -e 's/(//' \
	| awk '{print "\""$$1"\","}' > $@

${GEN_DIR}/%.tab.c: ${GEN_DIR}/%.h
	awk '/^ *int /{print $$2}' $< \
	| sed -e 's/(//' \
	| awk '{print "\""$$1"\","}' > $@

#-----------------------------------------------------------------------------

