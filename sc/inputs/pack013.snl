from std use *;

var b = new blob(4000);

pack b, 0, "i2", [ -2, -1, 0, 1, 2, 3 ];

for var i = 0 to 10 do
    . unpack int( b, i*2, "i2" )
enddo

. "----------------";

for var i = 0 to 10 do
    . unpack int( b, i*2, "u2" )
enddo

. "=================";

pack b, 0, "i4", [ -2, -1, 0, 1, 2, 3 ];

for var i = 0 to 10 do
