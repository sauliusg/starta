//--*- Java -*--
// Compiler tests
//

use * from std;

type etype = ldouble;

var eps = 0.1 etype;

.eps;

var x, y = 1 etype, 200 etype;

.x; .y;

function exact_inverse( etype x )
{
    var div = 1 etype/x;

    var diff = div * x - 1 etype;

    var abs = diff > 0 etype? diff : -diff;

    if( abs > eps ) {
        . "Can't divide", 1, "by", x;
    } else {
        . "division 1/x gives:", div;
    }
}

exact_inverse( x );
exact_inverse( y );
