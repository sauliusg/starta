#
# Snail compiler tests
#
#
# Constant 'null' tests.
#

include "stdtypes.slib"

type S = struct { x, y : int; m : array of float }; 

var s : S;

s = null;

if s == null then
    . "s is NULL";
else
    . "s is NOT null";
endif

s = new S;

if s == null then
    . "s is NULL";
else
    . "s is NOT null";
endif

if s.m == null then
    . "Array is null"
endif

s.m = new float[10];

if null == s.m then
    . "Array is null"
else
    . "Array is allocated"
endif

