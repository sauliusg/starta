#! /usr/bin/env starta
#--*- c -*--

use * from std;
use Strings;

for var i = 1 to narguments()-1
do
    var filename = argument(i);
    var data = fload( filename );
    var header = unpack string( data, 0,  "s" );

    header = split( header, "}" )[0];
    header = split( header, "{" )[1];

    var hdrlines = split( header, "\n" );
    . length(hdrlines);
    for var line in hdrlines[1:] do . line; enddo;

enddo;
