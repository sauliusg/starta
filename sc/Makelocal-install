# --*- Makefile -*--

PREFIX = ${HOME}/install/slc/slc-r${SVN_VERSION}

install: tests
	mkdir -p ${PREFIX}/bin
	cp -av sl ${PREFIX}/bin
	strip ${PREFIX}/bin/sl
	mkdir -p ${PREFIX}/lib/slc/libraries
	cp -av modules/*.slib ${PREFIX}/lib/slc/
	find libraries -name '*.so*' \
	| xargs -i cp -av {} ${PREFIX}/lib/slc/libraries
