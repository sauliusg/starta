// Test destructors.

use std;

class C {
    string name;
    int count;

    constructor C( string name = "default C"; int count = -1 )
    {
        self.name = name;
        self.count = count;
    }

    destructor C
    {
        . "Finita la comedia!"
    }

    method print() { . self.name, self.count }
}

var c1 = new C();
var c2 = new C( "c2", count => 10 );

c1->print();
c2->print();
