//
// Compiler tests
//

// Check whether we can allocate zero-length (empty) array of a
// non-null structure:

use * from std;

null struct S { int i; string s };

var s = new S[0];

s = push( s, [new S] );

s[0].i = 1;
s[0].s = "S";

s = push( s, [struct S { s => "Second S", i => 12345 }] );

s = push( s, [null@S] );

for var i = 0 to last(s) do
    if( s[i] != null ) {
        . s[i].s _ ",", s[i].i
    } else {
        . "NULL"
    }
enddo
